    title: {
      display: true,
      text: "World Wide Wine Production"
    }
  }
});

//[{"value": 1, "label":"COMPLITED"},{"value": 2, "label":"INPROGRESS"},{"value": 1, "label":"NOTSTARTED"}]
function decodeHtml(html){
	var txt = document.crateElement("textarea");
	txt.innerHTML = html;
	return txt.value;
}