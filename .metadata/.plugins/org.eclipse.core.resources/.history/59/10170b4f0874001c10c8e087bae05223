package com.jb.pma.dao;

import java.util.List;

import org.springframework.data.jpa.repository.Query;
import org.springframework.data.repository.CrudRepository;

import com.jb.pma.dto.ProjectLabele;
import com.jb.pma.entities.Project;

public interface ProjectRepository extends CrudRepository<Project, Long>{
	
	@Override
	public List<Project> findAll();
	
	@Query(nativeQuery=true, value="SELECT STAGE AS LABLE, COUNT(*) AS VALUE FROM PROJECT " + 
			"GROUP BY STAGE " + 
			"ORDER BY VALUE DESC")
	public List<ProjectLabele> projectStatuses();
	
}
